{
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": true,
    "removeComments": false,
    "noLib": false,
    "esModuleInterop": true,
    "target": "ESNext",
    "jsx": "preserve",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "lib": [
      "ESNext"
    ],
    "outDir": "./lib"
  },
  "exclude": [
    "./node_modules",
    "../../node_modules"
  ],
  "include": [
    "src/index.ts"
  ]
}