{
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": true,
    "removeComments": true,
    "noLib": false,
    "esModuleInterop": true,
    "target": "ES2018",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "lib": [
      "ES2018"
    ],
    "outDir": "./lib/"
  },
  "exclude": [
    "./node_modules",
    "../../node_modules"
  ],
  "include": [
    "./src/"
  ]
}